.item
  position: relative
  // flex: 1 1 0
  flex-grow: 1
  flex-basis: 0
  // padding-left: 10px
  // padding-right: 10px
  width: 100%
  min-height: 1px
  max-width: 100%

  &.auto
    flex: 0 1 auto
    width: auto
  
  for size in (320 480 640 800 960 1120 1280)
    for n in (1..16)
      &.w{ size }-{ n }
        @media (min-width: unit(size, 'px'))
          flex: 0 0 unit(n/16*100, '%')
          max-width: unit(n/16*100, '%')
          // flex-basis: unit(n/16*100, '%')
      &.w{ size }-hide
        @media (max-width: size)
          display: none


.grid
  display: flex
  flex-wrap: wrap
  // flex: 0 1 auto

  &.center
    justify-content: center

  &.space-between
    justify-content: space-between

  &.column
    flex-direction: column
    flex-wrap: nowrap

for n in (1..3)
  .row{ n }
    & > .item
      padding-bottom: unit((n*10), 'px')

.padded
  &.grid
    margin-left: -12px
    margin-right: -12px

  & > .item
    padding-left: 12px
    padding-right: 12px
